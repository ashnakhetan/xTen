{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "target": "ES5",
    "module": "ES2015",
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "utils",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
  },
  "include": [
    "utils/**/*"],
}

